{{#if label}}
  <label for={{inputId}}>
    {{label}}
  </label>
{{/if}}

{{textarea
    id=inputId
    class=inputClass
    autofocus=autofocus
    cols=cols
    disabled=disabled
    maxlength=maxlength
    name=name
    placeholder=placeholder
    readonly=readonly
    rows=rows
    selectionDirection=selectionDirection
    selectionEnd=selectionEnd
    selectionStart=selectionStart
    spellcheck=spellcheck
    tabindex=tabindex
    value=value
    wrap=wrap
}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}