<h2 class="title">Checkbox</h2>

<div class="demo-container">
  <div class="demo-item">
    {{ice-checkbox
      checked=checked
      indeterminate=indeterminate
      disabled=disabled
      on-change=(action (mut checked))
      label="Checkbox"
    }}
  </div>
  <div class="demo-item">
    {{ice-checkbox
      checked=true
      indeterminate=indeterminate
      disabled=disabled
      label="Checked Checkbox"
    }}
  </div>
  <div class="demo-item">
    {{ice-checkbox
      checked=checked
      indeterminate=true
      disabled=disabled
      label="Indeterminate Checkbox"
    }}
  </div>
  <div class="demo-item">
    {{ice-checkbox
      checked=checked
      indeterminate=indeterminate
      disabled=true
      label="Disabled Checkbox"
    }}
  </div>
</div>