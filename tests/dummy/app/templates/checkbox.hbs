<h2 class="title">Checkbox</h2>

<div class="demo-container">
  <div class="demo-item">
    <h3>Checkbox:</h3>
    {{ice-checkbox
        checked=checked
        indeterminate=indeterminate
        disabled=disabled
        on-change=(action (mut checked))
    }}
  </div>
  <div class="demo-item">
    <h3>Checked Checkbox:</h3>
    {{ice-checkbox
        checked=true
        indeterminate=indeterminate
        disabled=disabled
    }}
  </div>
  <div class="demo-item">
    <h3>Indeterminate Checkbox:</h3>
    {{ice-checkbox
        checked=checked
        indeterminate=true
        disabled=disabled
    }}
  </div>
  <div class="demo-item">
    <h3>Disabled Checkbox:</h3>
    {{ice-checkbox
        checked=checked
        indeterminate=indeterminate
        disabled=true
    }}
  </div>
</div>