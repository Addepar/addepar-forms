<h2 class="title">Textarea</h2>

<div class="demo-container">
  <h3>Textarea</h3>
  <div class="demo-item">
    {{ice-textarea
      placeholder="testing..."
    }}
  </div>
  <div class="demo-item">
    {{ice-textarea
      placeholder="testing..."
      label="Textarea with label"
    }}
  </div>
  <div class="demo-item">
    {{ice-textarea 
      disabled="true"
      label="Disabled Textarea"
    }}
  </div>
  <div class="demo-item">
    {{ice-textarea 
      label="Textarea with Event Handlers"
      onFocusIn="eventHanlders"
      onFocusOut="eventHanlders"
      onKeyDown="eventHanlders"
      onKeyPress="eventHanlders"
      onKeyUp="eventHanlders"
    }}
  </div>
</div>