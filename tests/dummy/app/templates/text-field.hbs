<h3 class="title">Text Field</h3>

<div class="demo-container">
  <h4 class="demo-header">ICE Text Field</h4>
  <p class="demo-header">Types</p>
  <div class="demo-item">
    {{ice-text-field 
      placeholder='Enter Text'
    }}
  </div>
  <p class="demo-header">States</p>
  <div class="demo-item">
    {{ice-text-field 
      placeholder='Enter Text'
      shouldFocus=true
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      disabled=true
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      readonly=true
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      isError=true
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      isWarning=true
    }}
  </div>
  <p class="demo-header">Types</p>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      placeholder='Enter Text'
      label="Text Field Label"
    }}
  </div>
  <p class="demo-header">States</p>
  <div class="demo-item">
    {{ice-text-field 
      placeholder='Enter Text'
      shouldFocus=true
      label="Focus"
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      placeholder='Enter Text'
      disabled=true
      label="Disabled"
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field
      value="Disabled"
      placeholder='Enter Text'
      disabled=true
      label="Disabled"
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      readonly=true
      label="Read Only"
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      isError=true
      label="Error"
    }}
  </div>
  <div class="demo-item">
    {{ice-text-field 
      value='Input Text'
      isWarning=true
      label="Warning"
    }}
  </div>
