<h2 class="title">Input</h2>

<div class="demo-container">
  <h3>Text Input</h3>
  <div class="demo-item">
    {{ice-input 
      type="text"
      shouldFocus=true
      placeholder="input placeholder"
      onChange="onChangeHandler"
      onFocusIn="eventHanlders"
    }}
  </div>
  <div class="demo-item">
    {{ice-input 
      type="text"
      className="input2"
      inputId="text1"
      label="Text Input with Label"
    }}
  </div>
  <div class="demo-item">
    {{ice-input 
      type="text"
      inputId="text2"
      disabled=true
      label="Disabled Text Input"
    }}
  </div>
  <div class="demo-item">
    {{ice-input 
      type="text"
      inputId="text22"
      label="Readonly Text Input"
      readonly=true
      value="readonly"
    }}
  </div>
  <div class="demo-item">
    {{ice-input 
      type="text"
      inputId="text3"
      label="Text Input with Event handlers"
      onChange="onChangeHandler"
      onFocusIn="eventHanlders"
      onFocusOut="eventHanlders"
      onKeyDown="eventHanlders"
      onKeyPress="eventHanlders"
      onKeyUp="eventHanlders"
    }}
  </div>
</div>